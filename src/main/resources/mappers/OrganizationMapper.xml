<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.rrricardo.postcalendarbackend.mappers.OrganizationMapper">
    <select id="getOrganizations" resultType="Organization" >
        select * from `organization`
    </select>

    <select id="getOrganizationById" parameterType="int" resultType="Organization" >
        select * from `organization` where id = #{id}
    </select>

    <insert id="createOrganization" parameterType="Organization" >
        insert into `organization` (name,
                                    details)
        values (#{name},
                #{details})
    </insert>

    <update id="updateOrganization" parameterType="Organization">
        update `organization` set name=#{name}, details=#{details}
        where id=#{id}
    </update>

    <delete id="deleteOrganization" parameterType="int">
        delete from `organization` where id=#{id}
    </delete>
</mapper>